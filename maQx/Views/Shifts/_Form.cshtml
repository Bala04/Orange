@model maQx.Models.ShiftViewModel

<div class="admin-form-layout" ng-controller="ShiftController as sCtrl">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @{
        var a = @ViewContext.RouteData.Values["action"].ToString();
    }

    <div class="form-group">
        <div>
            @Html.TextBoxFor(model => model.Description, new { placeholder = "Shift Name" })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div>
            <div class="ui-bold">Start Time :</div>
            <timepicker ng-model="sCtrl.startTime" ng-change="sCtrl.proto.changed()" minute-step="5" show-meridian="true" class="time-selector"></timepicker>
            @Html.HiddenFor(model => model.StartTime, new { data_init = Model.StartTime, ng_value = "sCtrl.proto.parseDateTime(sCtrl.startTime)" })
            @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div>
            <div class="ui-bold">End Time :</div>
            <timepicker ng-model="sCtrl.endTime" ng-change="sCtrl.proto.changed()" minute-step="5" show-meridian="true" class="time-selector"></timepicker>
            @Html.HiddenFor(model => model.EndTime, new { data_init = Model.EndTime, ng_value = "sCtrl.proto.parseDateTime(sCtrl.endTime)" })
            @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div>
            <div>
                <input type="submit" value="@a" class="btn btn-default @(a == "Edit" ? "btn-warning" : "app-btn")" />
                <input type="reset" value="Clear" class="btn btn-default inverse-btn" />
            </div>
        </div>
    </div>
</div>


