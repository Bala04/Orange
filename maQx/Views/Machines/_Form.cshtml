@model maQx.Models.MachineViewModel

<div class="admin-form-layout">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @{
        var a = @ViewContext.RouteData.Values["action"].ToString();
    }

    <div class="form-group">
        <div>
            <div class="input-group">
                @if (a == "Edit")
                {
                    @Html.EnumDropDownListFor(model => model.MachineType)
                }
                else
                {
                    @Html.EnumDropDownListFor(model => model.MachineType, "- Machine Type -")
                }
                @Html.ValidationMessageFor(model => model.MachineType, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div>
            @Html.TextBoxFor(model => model.Code, new { placeholder = "Machine Code" })
            @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div>
            @Html.TextBoxFor(model => model.Description, new { placeholder = "Machine Description" })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div>
            @Html.TextBoxFor(model => model.MinLoad, new { placeholder = "Min Load" })
            @Html.ValidationMessageFor(model => model.MinLoad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div>
            @Html.TextBoxFor(model => model.MaxLoad, new { placeholder = "Max Load" })
            @Html.ValidationMessageFor(model => model.MaxLoad, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div>
            <div>
                <input type="submit" value="@a" class="btn btn-default @(a == "Edit" ? "btn-warning" : "app-btn")" />
                <input type="reset" value="Clear" class="btn btn-default inverse-btn" />
            </div>
        </div>
    </div>
</div>


