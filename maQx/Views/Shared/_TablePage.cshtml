@{
    Layout = "~/Views/Shared/_FramePage.cshtml";
}

<div ng-app="tabularApp">

    @RenderBody()

    <div ng-controller="TableController as tCtrl"  class="table-layout">
        <div class="default-toolbar">
            <div class="btn-group">               
                @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-sm btn-primary app-btn" })
                <input type="hidden" id="baseNode" value="@ViewContext.RouteData.Values["controller"]" /> 
                <button ng-click="tCtrl.reloadData()" type="button" class="btn btn-sm btn-primary app-btn">Refresh</button>
            </div>
        </div>
       
            <table class="table table-responsive table-striped" datatable dt-options="dtOptions" dt-columns="dtColumns"></table>
       
    </div>
   
    
   
</div>

@section Scripts {
@RenderSection("Scripts", false)
   @Scripts.Render("~/bundles/angular-table-controller")
  
}

